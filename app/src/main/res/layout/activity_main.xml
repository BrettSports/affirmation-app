<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Affirmation display with floating favorite button -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/textAffirmation"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:text="Welcome to the Affirmation App 💖"
                android:textSize="20sp"
                android:textAlignment="viewStart"
                android:scrollbars="vertical"
                android:padding="16dp"
                android:paddingEnd="80dp"
                android:paddingBottom="80dp"
                android:background="@drawable/affirmation_border" />

            <ImageButton
                android:id="@+id/buttonFavorite"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="12dp"
                android:background="@drawable/fab_background"
                android:contentDescription="Favorite"
                android:src="@drawable/ic_star_border"
                android:elevation="6dp"
                android:scaleType="center"
                android:padding="12dp"
                android:tint="#FFFFFF" />
        </FrameLayout>

        <!-- Category Buttons Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/category_card_background"
            android:padding="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Your Affirmation 💖"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="12dp"
                android:textColor="#333333" />

            <Button
                android:id="@+id/buttonYou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You 💖"
                android:layout_marginTop="8dp"
                android:backgroundTint="#E91E63"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:paddingVertical="14dp" />

            <Button
                android:id="@+id/buttonReflections"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reflections 🪞"
                android:layout_marginTop="8dp"
                android:backgroundTint="#9C27B0"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:paddingVertical="14dp" />

            <Button
                android:id="@+id/buttonAspirations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aspirations 🚀"
                android:layout_marginTop="8dp"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:paddingVertical="14dp" />

            <Button
                android:id="@+id/buttonHorny"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hornery 🔥"
                android:layout_marginTop="8dp"
                android:backgroundTint="#FF5722"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:paddingVertical="14dp" />

            <Button
                android:id="@+id/buttonMystery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mystery ✨"
                android:layout_marginTop="8dp"
                android:backgroundTint="#607D8B"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:paddingVertical="14dp" />
        </LinearLayout>

        <!-- Utility Buttons Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Special Features"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/buttonViewFavorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⭐ View Favorites"
            android:layout_marginTop="4dp"
            style="?attr/materialButtonOutlinedStyle" />

        <Button
            android:id="@+id/buttonViewHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📜 View History"
            android:layout_marginTop="8dp"
            style="?attr/materialButtonOutlinedStyle" />

        <Button
            android:id="@+id/buttonClearHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🗑️ Clear History"
            android:layout_marginTop="8dp"
            style="?attr/materialButtonOutlinedStyle" />

        <Button
            android:id="@+id/buttonReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🔁 Reset Affirmations"
            android:layout_marginTop="8dp"
            style="?attr/materialButtonOutlinedStyle" />

        <Button
            android:id="@+id/buttonAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About This App"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            style="?attr/materialButtonOutlinedStyle" />

    </LinearLayout>
</ScrollView>