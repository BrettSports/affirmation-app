<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Affirmation display with favorite button next to it -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/textAffirmation"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:text="Welcome to the Affirmation App 💖"
                android:textSize="20sp"
                android:textAlignment="viewStart"
                android:scrollbars="vertical"
                android:padding="16dp"
                android:paddingEnd="80dp"
                android:paddingBottom="80dp"
                android:background="@drawable/affirmation_border" />

            <ImageButton
                android:id="@+id/buttonFavorite"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="12dp"
                android:background="@drawable/fab_background"
                android:contentDescription="Favorite"
                android:src="@drawable/ic_star_border"
                android:elevation="6dp"
                android:scaleType="center"
                android:padding="12dp"
                android:tint="#FFFFFF" />
        </FrameLayout>

        <Button
            android:id="@+id/buttonYou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You 💖"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/buttonReflections"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reflections 🪞"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/buttonAspirations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aspirations 🚀"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/buttonHorny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hornery 🔥"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/buttonMystery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mystery"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/buttonViewFavorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⭐ View Favorites"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/buttonViewHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📜 View History"
            android:layout_marginTop="32dp" />

        <Button
            android:id="@+id/buttonClearHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🗑️ Clear History"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/buttonReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🔁 Reset Affirmations"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/buttonAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About This App"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"/>

    </LinearLayout>
</ScrollView>